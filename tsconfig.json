{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "target": "ESNext",
    "outDir": "build",
    "strict": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build", ".idea"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
